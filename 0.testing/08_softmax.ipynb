   "source": [
    "# NumPyの読み込み\n",
    "import numpy as np\n",
    "\n",
    "\n",
    "\n",
    "# (1)オーバーフローを回避するための工夫を取り入れたソフトマックス関数を定義してください\n",
    "def softmax_v2(x):\n",
    "    c = np.max(x)\n",
    "    x_new = x-c\n",
    "    return np.exp(x_new)/np.sum(np.exp(x_new))\n",
    "\n",
    "\n",
    "x = np.array([2000, 2001, 2002])\n",
    "print(softmax_v2(x))"
   ]
